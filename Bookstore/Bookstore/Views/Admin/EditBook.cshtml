@model BookStore.Models.Book
<h2>Edit Book</h2>
<form method="post" action="@Url.Action("EditBook")">
    <input type="hidden" asp-for="BookId" />
    <div>
        <label>Title</label>
        <input type="text" asp-for="Title" required />
    </div>
    <div>
        <label>Author</label>
        <input type="text" asp-for="Author" required />
    </div>
    <div>
        <label>Year of Publication</label>
        <input type="number" asp-for="YearOfPublication" required />
    </div>
    <div>
        <label>Category</label>
        <select asp-for="CategoryId">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        </select>
    </div>
    <div>
        <label>Price</label>
        <input type="number" step="0.01" asp-for="Price" required />
    </div>
    <div>
        <label>Stock</label>
        <input type="number" asp-for="Stock" required />
    </div>
    <div>
        <label>Short Description</label>
        <textarea asp-for="ShortDescription"></textarea>
    </div>
    <div>
        <label>Long Description</label>
        <textarea asp-for="LongDescription"></textarea>
    </div>
    <div>
        <label>Publisher</label>
        <input type="text" asp-for="Publisher" />
    </div>
    <div>
        <label>Small Image</label>
        <input type="text" asp-for="ImageS" />
    </div>
    <div>
        <label>Medium Image</label>
        <input type="text" asp-for="ImageM" />
    </div>
    <div>
        <label>Large Image</label>
        <input type="text" asp-for="ImageL" />
    </div>
    <div>
        <input type="submit" value="Update" />
    </div>
</form>