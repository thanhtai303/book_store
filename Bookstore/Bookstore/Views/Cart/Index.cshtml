@model BookStore.Models.Cart
<h2>Shopping Cart</h2>
@if (Model.CartItems.Any())
{
    <table>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Book.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Quantity * item.Book.Price)</td>
            </tr>
        }
    </table>
    <p>Total: @Model.CartItems.Sum(i => i.Quantity * i.Book.Price)</p>
    <a href="@Url.Action("Checkout", "Order")">Proceed to Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
}