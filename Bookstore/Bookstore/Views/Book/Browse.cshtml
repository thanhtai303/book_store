@model List<BookStore.Models.Book>
<h2>Browse Books</h2>
<div>
    <h3>Categories</h3>
    @foreach (var category in ViewBag.Categories)
    {
        <a href="@Url.Action("Browse", new { categoryId = category.CategoryId })">@category.Name</a>
    }
</div>
<div>
    @foreach (var book in Model)
    {
        <div>
            <h3>@book.Title</h3>
            <p>@book.Author</p>
            <p>@book.Price</p>
            <a href="@Url.Action("Details", new { id = book.BookId })">View Details</a>
            <form method="post" action="@Url.Action("AddToCart", "Cart")">
                <input type="hidden" name="bookId" value="@book.BookId" />
                <input type="submit" value="Add to Cart" />
            </form>
        </div>
    }
</div>